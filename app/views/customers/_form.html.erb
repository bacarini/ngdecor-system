<%= simple_form_for(@customer, html: {class: 'form-horizontal' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :mobile %>
  <%= f.input :address %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t("cancel"), customers_path , :class => 'btn' %>
  </div>
<% end %>
