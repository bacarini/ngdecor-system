<%= simple_form_for @supplier, :html => { :class => 'form-horizontal supplier_validate' } do |f| %>
  <%= f.input :name %>
  <%= f.input :cnpj %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                suppliers_path, :class => 'btn' %>
  </div>
<% end %>
